# ================================================
# Configuración del Cliente WiFi - Rx
# ================================================

# Interfaz WiFi a usar para conectarse
WIFI_INTERFACE=wlan0

# SSID del hotspot a conectarse
HOTSPOT_SSID=evalvid_lab

# Contraseña del hotspot
HOTSPOT_PASSWORD=12345678

# ================================================
# Configuración del servidor Chrony
# ================================================

# IP del servidor Tx (gateway del hotspot)
TX_SERVER_IP=192.168.12.1

# Puerto del servidor Chrony (por defecto 123)
CHRONY_PORT=323

# ================================================
# Opciones avanzadas de sincronización
# ================================================

# Tiempo máximo de espera para conectar al hotspot (segundos)
CONNECT_TIMEOUT=30

# Tiempo máximo de espera para obtener IP (segundos)
DHCP_TIMEOUT=15

# Intentos de ping antes de fallar
PING_ATTEMPTS=3

# Tiempo de espera entre intentos de conexión (segundos)
RETRY_WAIT=2

# Tiempo máximo para sincronizar Chrony (segundos)
CHRONY_START_TIMEOUT=10
