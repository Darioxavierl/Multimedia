# ================================================
# Configuración del Hotspot WiFi - Tx
# ================================================

# Interfaz WiFi a usar para el hotspot
WIFI_INTERFACE=wlan0

# SSID (nombre visible de la red)
HOTSPOT_SSID=evalvid_lab

# Contraseña del hotspot (mínimo 8 caracteres)
HOTSPOT_PASSWORD=12345678

# ================================================
# Configuración de IP y DHCP
# ================================================

# IP estática del servidor Tx en el hotspot
GATEWAY_IP=192.168.12.1

# Máscara de red (en notación CIDR: /24 = 255.255.255.0)
NETWORK_MASK=24

# Rango de IPs para DHCP (inicio)
DHCP_START=192.168.12.2

# Rango de IPs para DHCP (fin)
DHCP_END=192.168.12.254

# Tiempo de lease DHCP en segundos (3600 = 1 hora)
DHCP_LEASE=3600

# ================================================
# Configuración de Chrony
# ================================================

# Puerto del servidor Chrony (por defecto 123)
CHRONY_PORT=323

# Nivel de estrato del servidor Chrony (10 es recomendado para servidor local)
CHRONY_STRATUM=10
